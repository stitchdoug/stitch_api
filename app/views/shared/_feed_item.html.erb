<li id="<%= feed_item.id %>">
  <table class="table table-bordered table-condensed">
    <thead>
      <tr>
        <th colspan="2"><%= link_to get_name(feed_item.name), feed_item %> <%= get_status(feed_item) %></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>Description</td>
        <td><em><%= feed_item.description %></em></td>
      </tr>
      <tr>
        <td>Notes</td>
        <td><%= wrap(feed_item.notes) %></td>
      </tr>
      <tr class="feed_bottom_row">
        <td>
          <span class="update">
            <% if current_user?(feed_item.user) || is_admin? %>
                  <%= render 'shared/update_link', feed_item: feed_item %>
              <% end %>
          </span>
        </td>
        <td>
          <span class="timestamp">
            Posted <%= time_ago_in_words(feed_item.created_at) %> ago by <%= link_to feed_item.user.username, feed_item.user %>
          </span>
          <span class="delete">
              <% if current_user?(feed_item.user) || is_admin? %>
                  <%= render 'shared/delete_link', feed_item: feed_item %>
              <% end %>
          </span>
        </td>
      </tr>
    </tbody>
  </table>
</li>