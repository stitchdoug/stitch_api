<%= form_for(@stitch) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <h3><strong>New Stitch</strong></h3>
    <%= f.text_field :name, placeholder: "Name" %>
    <div class="field">
      <%= f.text_area :description, placeholder: "Description (external)" %>
    </div>
    <div class="field">
      <%= f.text_area :notes, placeholder: "Notes (internal)" %>
    </div>
    <%= f.submit "Create", class: "btn btn-large btn-primary" %>
<% end %>