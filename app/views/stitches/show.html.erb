<% provide(:title, get_name(@stitch.name)) %>
<div class="row">
  <aside class="span4">
    <section>
      <%= render 'shared/user_info' %>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
    <section>
      <a href="http://getstitch.co/newsite/?page_id=325&notify=1&stitch_id=<%= @stitch.id %>" target="_blank">getstitch.co NOTIFY</a>
    </section>
  </aside>
  <div class="span8">
    <h2><%= get_name(@stitch.name) %></h2>
    <%= render 'stitch' %>

    <%= render 'images' %>

    <% if @video %>
        <%= render 'video' %>
    <% end %>
  </div>
</div>